<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/leftRelative">
        <ImageView
            android:id="@+id/searchtool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_search"
            android:hint="동영상 검색"
            android:layout_marginTop="2dp"
            android:textColor="#FFFFFF"
            android:singleLine="true"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@drawable/my_cursor_drawable"
            android:cursorVisible="true"
            android:textColorHighlight="@android:color/transparent"
            android:background ="@null"
            android:layout_toRightOf="@+id/searchtool"
            />
        <!--#FFFFFF-->
        <View
            android:id="@+id/underLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/searchtool"
            android:layout_marginRight="5dp"
            android:layout_marginTop="13dp"
            android:background="#FFFFFF" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_toRightOf="@+id/leftRelative">
        <Button
            android:id="@+id/toolbar_btn_mark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/toolbar_timeline_mark"
            />


        <Button
            android:id="@+id/toolbar_btn_friend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/toolbar_friend"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />

        <Button
            android:id="@+id/toolbar_btn_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/toolbar_myprofile"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>
</RelativeLayout>