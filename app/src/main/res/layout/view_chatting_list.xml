<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image_video_thumbnail"
        android:src="@drawable/profile3"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="친구이름"
         android:id="@+id/text_video_name"
         android:layout_toRightOf="@+id/image_video_thumbnail"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_last_speak"
        android:text="내가 제일 마지막 한말"
        android:layout_below="@+id/text_video_name"
        android:layout_toRightOf="@id/image_video_thumbnail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_last_time"
        android:layout_alignParentRight="true"
        android:text="5월 30일"
        />

</RelativeLayout>