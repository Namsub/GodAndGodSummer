<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:editTextStyle">@style/myEditText</item>-->
        <item name="android:selectableItemBackground">@drawable/button_ripple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--editText under바 흰색으로 하려고 만든 테마 속성 녹색 바탕에만 쓸 예정-->
    <style name="Login" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorWhite</item>
        <!--에디트 텍스트 흰색 언더바 만들기-->
        <item name="colorControlActivated">@color/colorWhite</item>
        <!--에디트 텍스트에 커서 갔을때 색-->
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <!--윈도우 창이 투명해짐-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--editText 용-->
    <!--<style name="myEditText" parent="@android:style/Widget.Holo.Light.EditText">-->
        <!--&lt;!&ndash;<item name="android:background">@android:drawable/editbox_background_normal</item>&ndash;&gt;-->
